<p style="color: green"><%= notice %></p>
<%= link_to "New tweet", new_tweet_path %>
<h1>Tweets</h1>
<%= form_with url: tweets_path, method: :get do |t| %>
  <%= t.text_field :tweet, placeholder: 'Escribre aqui', value: params[:tweet]%>
  <%= t.submit "Buscar..."%>
<% end %>
<br>
<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
  <% end %>
</div>

